@model Employee_Management.BLL.DTO.ViewModels.ProjectViewModel

@{
    ViewData["Title"] = "Delete Project";
}

<div class="card">
    <div class="card-header">
        <h2 class="text-center mb-4">Delete Project</h4>
    </div>
    <div class="card-body">
        <div class="mb-2">
            <strong>Name:</strong> @Model.Name
        </div>
        <div class="mb-2">
            <strong>Description:</strong> @Model.Description
        </div>
        <div class="mb-2">
            <strong>Start Date:</strong> @Model.StartDate.ToString("d")
        </div>
        <div class="mb-2">
            <strong>End Date:</strong> @Model.EndDate.ToString("d")
        </div>

        <form asp-action="DeleteConfirmed" method="post">
            <input type="hidden" name="id" value="@Model.Id" />
            <div class="form-group">
                <button type="submit" class="btn btn-danger">Delete</button>
                <a asp-action="Index" class="btn btn-secondary ml-2">Cancel</a>
            </div>
        </form>
    </div>
</div>

<style>
    .card {
        max-width: 600px;
        margin: 20px auto;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        border-radius: 8px;
    }

    .card-header {
        background-color: #dc3545;
        color: white;
        border-top-left-radius: 8px;
        border-top-right-radius: 8px;
    }

    .btn {
        border-radius: 4px;
    }

    h3 {
        margin-bottom: 20px;
    }

    strong {
        font-weight: bold;
    }
</style>